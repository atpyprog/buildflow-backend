# ---------------------------
# APP CONFIG
# ---------------------------
APP_NAME=BuildFlow
APP_ENV=development
DEBUG=True

# ---------------------------
# DATABASE CONFIG (PostgreSQL)
# ---------------------------
# Define os parâmetros de conexão com o banco de dados PostgreSQL.
# Altere conforme seu ambiente local.
DB_HOST=localhost
DB_PORT=5432
DB_NAME=buildflow
DB_USER=buildflow_user
DB_PASS=buildflow_pass
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ---------------------------
# WEATHER / OPEN-METEO CONFIG
# ---------------------------
OPEN_METEO_ENABLED=True
OPEN_METEO_TIMEOUT_S=8
OPEN_METEO_RETRIES=2
OPEN_METEO_RETRY_BACKOFF_MS=250
OPEN_METEO_DAILY_PARAMS=weathercode,temperature_2m_max,temperature_2m_min,precipitation_sum,windspeed_10m_max
OPEN_METEO_TIMEZONE=Europe/Lisbon

# ---------------------------
# API / SERVER CONFIG
# ---------------------------
API_V1_STR=/api/v1
HOST=127.0.0.1
PORT=8000

# ---------------------------
# CORS CONFIG
# ---------------------------
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# ---------------------------
# LOGGING
# ---------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json